@model IEnumerable<S2022A6LLC.Models.TrackWithDetailViewModel>

@{
    ViewBag.Title = "Track List";
}

<h2>@ViewBag.Title</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @if (item.Albums.Count() > 0)
            {
                var albumsList = string.Join("<br />", item.Albums.Select(alb => alb.Name));
                @Html.Raw(albumsList);

            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @if (User.IsInRole("Clerk"))
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
